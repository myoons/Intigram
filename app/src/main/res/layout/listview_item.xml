<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/LinearLayout1"
    tools:context=".MainActivity"
    android:elevation="20dp"
    android:background="@drawable/stroke_black"
    android:layout_margin="3dp">

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView

            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/avatars"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="top">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no_inform"
                android:fontFamily="@font/korean"
                android:textColor="@android:color/black"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/message"
                android:layout_alignRight="@+id/name"
                android:layout_alignEnd="@+id/name"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:clickable="true"
                android:layout_marginTop="9dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/message"
                android:scaleType="fitCenter"/>

        </RelativeLayout>

        <View
            android:background="#66bdbdbd"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1">

            <TextView
                android:id="@+id/pnum"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/no_num"
                android:layout_weight="1"
                android:fontFamily="@font/korean"
                android:textColor="@android:color/black"
                android:gravity="center" />

            <ImageView
                android:id="@+id/calling"
                android:layout_alignRight="@+id/pnum"
                android:layout_alignEnd="@+id/pnum"
                android:clickable="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="9dp"
                android:src="@drawable/calling"
                android:scaleType="fitCenter"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>